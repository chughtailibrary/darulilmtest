<% exhibit_specific_manifest = document.exhibit_specific_manifest(@exhibit.required_viewer.custom_manifest_pattern) %>

<% if exhibit_specific_manifest %>
  <iframe
    src="<%= mirador_index_path(
      manifest: exhibit_specific_manifest,
      canvas: document.canvas.iiif_id
    ) %>"
    allowfullscreen="true"
    class="mirador-embed-wrapper"
    frameborder="0"
    marginwidth="0"
    marginheight="0"
    scrolling="no"
    width="100%"
  ></iframe>

  <%= iiif_drag_n_drop(exhibit_specific_manifest) %>
<% end %>
