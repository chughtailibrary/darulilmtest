<% document ||= @document %>
<% document.mods.abstract.each do |abstracts| %>
  <% abstracts.values = split_on_white_space(abstracts.values) %>
  <%= mods_record_field(abstracts) %>
<% end %>

<% document.mods.contents.each do |contents| %>
  <% contents.values = split_on_white_space(contents.values) %>
  <%= mods_record_field(contents) %>
<% end %>
